Actor BloodSpawn
{
speed 8
mass 20
+NOGRAVITY
-SOLID
+NOBLOCKMAP
+RIPPER
+MISSILE
+CLIENTSIDEONLY
+NOTELEPORT
+NOBLOCKMAP
+BLOODLESSIMPACT 
+FORCEXYBILLBOARD
+NODAMAGETHRUST
Seesound "GIBS2"
deathsound "GIBS2"
//scale defult at .4
scale 1
