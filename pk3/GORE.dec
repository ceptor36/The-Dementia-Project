	height 0
	Speed 5
	scale 0.5 //default 0.2
	Projectile
	-NOGRAVITY
	-SOLID
	+CLIENTSIDEONLY
	Gravity 0.25
	States
	{
	Spawn:
		KMBL ABCD 1
	    Loop
	Death:
	   BLU1 ABCDEF 2
