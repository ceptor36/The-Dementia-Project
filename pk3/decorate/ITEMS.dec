//health stuffs
ACTOR VBCan : Health replaces HealthBonus
{
  +COUNTITEM
  +INVENTORY.ALWAYSPICKUP
  Inventory.Amount 1
  scale 0.5
  Inventory.MaxAmount 999
  Inventory.PickupMessage "Picked up a can of VB Beer."
  States
  {
  Spawn:
    VBHB A -1
    Stop
  }
}

ACTOR VBCanPack : Health replaces Stimpack
{
  Inventory.Amount 10
  scale 0.5
  Inventory.PickupMessage "Picked up a pack of VB Beers." 
  Health.LowMessage 25, "Picked up some beers that you REALLY need!" 
  States
  {
  Spawn:
    VBSP A -1
    Stop
  }
}

ACTOR VBBottlePack : Health replaces Medikit
{
