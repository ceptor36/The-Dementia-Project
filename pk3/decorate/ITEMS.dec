//Elixir Ammo and it's stuff

Actor Elixir : Ammo
{
  Inventory.PickupSound "misc/pickup"
  Inventory.Amount 1
  Inventory.MaxAmount 999
  Ammo.BackpackAmount 10
  Ammo.BackpackMaxAmount 999
  Inventory.PickupMessage "Elixir-based pickup"
  Inventory.Icon ELIXA0
  States
  {
  Spawn:
    BALL A -1
    Loop
  }
}

